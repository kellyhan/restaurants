<div class="container-fluid">

<% if @current_user != nil %>  

  <div>
    <h2>
      Add a new cuisine
    </h2>

    <form action="/create_cuisine" method="post">
      <div class="col-md-6">
        <label for="name_box" class="form-label">Name</label>
        <input type="text" id="name_box" name="query_name" class="form-control">
      
      <p></p>

      <button>
        Add cuisine
      </button>

      </div>
    </form>
  </div>

<% else %>

<div class="alert alert-warning alert-dismissable" role="alert">
  Sign in to add a cuisine.
</div>
<a href="/user_sign_in">Sign In</a>

<% end %>

</div>