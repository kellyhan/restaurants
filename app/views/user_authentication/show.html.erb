<div class="container-fluid">

<h1>
  <%= @the_user.first_name %> <%= @the_user.last_name %>
</h1>

<div>
  <div>
    <a href="/users">
      Go to all users
    </a>
  </div>
  <div>
    <a href="/users/<%= @the_user.id %>">
      Go to user's restaurants
    </a>
  </div>
</div>

<hr>

<% if @current_user == @the_user %>

  <div>
    <h2>
      Edit user
    </h2>

    <div>
      <a href="/delete_user/<%= @the_user.id %>">
        Delete user
      </a>
    </div>

    <form action="/modify_user"  method="post" >
      <div>
        <label for="first_name_box">
          First Name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_user.first_name %>">
      </div>

      <div>
        <label for="last_name_box">
          Last Name
        </label>

        <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_user.last_name %>">
      </div>

      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value="<%= @the_user.username %>">
      </div>

      <div>
        <label for="password_box">
          New password
        </label>

        <input type="password" id="password_box" name="query_password">
      </div>

      <div>
        <label for="password_confirm_box">
          New password confirmation
        </label>

        <input type="password" id="password_confirm_box" name="query_password_confirmation">
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
<% end %>

</div>