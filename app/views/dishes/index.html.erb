<div class="container-fluid">
<h1>
  All images
</h1>

<div>
  <form action="/insert_picture">
    <button>
      Add an image
    </button>
  </form>
</div>

<p></p>

<% if @list_of_dishes.count != 0 %>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% @list_of_dishes.each do |a_dish| %>
      <div class="col">
        <div class="card h-100" style="width: 15rem;">
          <div class="card-header">
            <%= a_dish.name %>
          </div>
          <img src="<%= a_dish.image %>" class="img-responsive">
          <div class="card-body">
            <p class="card-text">
              From: <a href="/restaurants/<%= a_dish.restaurant.id %>" class="card-link"><%= a_dish.restaurant.name %></a>
            </p>
            <p class="card-text">
              Uploaded by: <a href="/users/<%= a_dish.user.id %>" class="card-link"><%= a_dish.user.username %></a>
            </p>
          </div>
          <div class="card-footer">
            <a href="/pictures/<%= a_dish.id %>" class="card-link">Show details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>