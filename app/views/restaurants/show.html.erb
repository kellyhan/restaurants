<div>
  <div>
    <h1>
      <%= @the_restaurant.name %>
    </h1>

    <div>
      <div>
        <a href="/restaurants">
          Go to all restaurants
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_restaurant.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @the_restaurant.address %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @the_restaurant.comments %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_restaurant.restaurant_user.username %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_restaurant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_restaurant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<% if @current_user == @the_restaurant.restaurant_user %>
  <div>
    <h2>
      Edit restaurant
    </h2>

    <div>
      <a href="/delete_restaurant/<%= @the_restaurant.id %>">
        Delete restaurant
      </a>
    </div>

    <form action="/modify_restaurant/<%= @the_restaurant.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_restaurant.name %>">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <textarea id="address_box" name="query_address"><%= @the_restaurant.address %></textarea>
      </div>

      <div>
        <label for="cuisine_box">
          Cuisine
        </label>

        <% if @the_restaurant.cuisine_id == nil %>
          <input type="text" id="cuisine_box" name="query_cuisine">
        <% else %>
          <input type="text" id="cuisine_box" name="query_cuisine" value="<%= @the_restaurant.cuisine.name %>">
        <% end %>
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="query_comments"><%= @the_restaurant.comments %></textarea>
      </div>

      <button>
        Update restaurant
      </button>
    </form>
  </div>
<% else %>
<% end %>
