<div>
  <div>
    <h1>
      List of all restaurants
    </h1>
  </div>
</div>

<hr>

<div>
  <form action="/insert_restaurant">
    <button>
      Add a restaurant
    </button>
  </form>
</div>

<hr>
<% if @list_of_restaurants.count != 0 %>
  <div>
    <div>
      <table border="2">
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Comments
          </th>

          <th>
            User
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>

        <% @list_of_restaurants.each do |a_restaurant| %>
          <tr>
            <td>
              <%= a_restaurant.id %>
            </td>

            <td>
              <%= a_restaurant.name %>
            </td>

            <td>
              <%= a_restaurant.address %>
            </td>

            <td>
              <%= a_restaurant.comments %>
            </td>

            <td>
              <%= .restaurant_user.username %>
            </td>

            <td>
              <%= time_ago_in_words(a_restaurant.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_restaurant.updated_at) %> ago
            </td>

            <td>
              <a href="/restaurants/<%= a_restaurant.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% else %>
<% end %>