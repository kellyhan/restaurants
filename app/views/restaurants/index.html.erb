<div>
  <div>
    <h1>
      List of all restaurants
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new restaurant
    </h2>

    <form action="/insert_restaurant" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <textarea id="address_box" name="query_address" rows="3"></textarea>
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="query_comments" rows="3"></textarea>
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create restaurant
      </button>
    </form>
  </div>
</div>

<hr>
<% if @list_of_restaurants.count != 0 %>
  <div>
    <div>
      <table border="2">
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Comments
          </th>

          <th>
            User
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>

        <% @list_of_restaurants.each do |a_restaurant| %>
          <tr>
            <td>
              <%= a_restaurant.id %>
            </td>

            <td>
              <%= a_restaurant.name %>
            </td>

            <td>
              <%= a_restaurant.address %>
            </td>

            <td>
              <%= a_restaurant.comments %>
            </td>

            <td>
              <%= a_restaurant.user_id %>
            </td>

            <td>
              <%= time_ago_in_words(a_restaurant.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_restaurant.updated_at) %> ago
            </td>

            <td>
              <a href="/restaurants/<%= a_restaurant.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% else %>
<% end %>