<% if @current_user != nil %>  

  <div>
    <h2>
      Add a new restaurant
    </h2>

    <form action="/create_restaurant" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <textarea id="address_box" name="query_address" rows="3"></textarea>
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <textarea id="comments_box" name="query_comments" rows="3"></textarea>
      </div>

      </div>

      <button>
        Add restaurant
      </button>
    </form>
  </div>

<% else %>

<div class="alert alert-warning alert-dismissable" role="alert">
  Sign in to add a restaurant.
</div>
<a href="/user_sign_in">Sign In</a>

<% end %>